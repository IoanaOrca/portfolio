---
import { Icon } from 'astro-icon';
import ThemeToggle from '@components/ThemeToggle.astro';

const links = [
  {
    label: 'Home',
    url: '/',
  },
  {
    label: 'Strings',
    url: '/strings',
  },
  {
    label: 'Recipes',
    url: '/recipes',
  },
  {
    label: 'Code',
    url: '/code',
  },
  {
    label: 'Blog',
    url: '/blog',
  },
  {
    label: 'Contact',
    url: '/contact',
  },
];
---

<nav class="navbar bg-base-200/60 sticky top-0 z-50 backdrop-blur shadow">
  <div class="navbar-start">
    <a class="btn btn-ghost btn-circle" href="/">
      <Icon name="orca" class="h-7 fill-current" />
      <span class="sr-only">IoanaOrca</span>
    </a>
  </div>
  <div class="navbar-end">
    {/* Desktop Menu */}
    <div class="flex-none hidden md:flex">
      <ul class="menu menu-horizontal px-1">
        {
          links.map((link) => (
            <li>
              <a class="btn btn-ghost btn-block" href={link.url}>
                {link.label}
              </a>
            </li>
          ))
        }
      </ul>
    </div>

    <ThemeToggle />

    {/* Mobile Menu */}
    <div class="dropdown dropdown-end md:hidden">
      <label tabindex="0" class="btn btn-ghost">
        <Icon name="HeroiconsBars3CenterLeft" class="h-7 fill-current scale-x-[-1]" />
        <span class="sr-only">Menu</span>
      </label>
      <ul tabindex="0" class="menu menu-compact dropdown-content mt-3 p-2 shadow bg-base-100 rounded-box">
        {
          links.map((link) => (
            <li>
              <a class="btn btn-ghost" href={link.url}>
                {link.label}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</nav>
