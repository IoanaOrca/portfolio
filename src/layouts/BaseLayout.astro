---
import Footer from '@components/Footer.astro';
import NavBar from '@components/NavBar.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <title>{title} â¸± Ioana Orca</title>
    <link rel="icon" href="/favicon/favicon.svg" type="image/svg+xml">
    <link rel="mask-icon" href="/favicon/favicon.svg" color="#fdd66d">
    <link rel="apple-touch-icon" href="/favicon/apple-touch-icon.png">
    <link rel="manifest" href="/favicon/site.webmanifest">
    <meta name="description" content="Creative crafting, coding, cooking & counseling">
    <meta property="og:title" content={title}>
    <meta property="og:type" content="website">
    <meta property="og:image" content="/og/og-image.png">
    <meta property="og:url" content="https://ioanaorca.com">
    <meta name="twitter:card" content="summary_large_image">
    <meta property="og:description" content="Creative crafting, coding, cooking & counseling">
    <meta property="og:site_name" content="Ioana Orca">
    <meta name="generator" content={Astro.generator}>
    <script is:inline>
      const theme = localStorage.getItem('orcatheme');
      if (theme === null) {
        document.documentElement.setAttribute('data-theme', 'orcalight');
      } else {
        document.documentElement.setAttribute('data-theme', theme);
      }
    </script>
  </head>
  <body class="flex flex-col min-h-screen selection:bg-primary selection:text-neutral">
    <NavBar />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
